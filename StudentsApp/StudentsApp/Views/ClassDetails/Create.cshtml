@model StudentsApp.Models.ClassDetail

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ClassDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StrName" class="control-label">Class Name</label>
                <input asp-for="StrName" class="form-control" />
                <span asp-validation-for="StrName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StrYear" class="control-label">Class Year</label>
                <input asp-for="StrYear" class="form-control" />
                <span asp-validation-for="StrYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="selectTeachers" class="control-label">Teacher</label>
                <select id="selectTeachers" name="FkIdPerson"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript" src="~/js/ClassDetails/create.js"></script>
}
