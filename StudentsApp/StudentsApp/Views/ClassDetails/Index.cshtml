@model IEnumerable<StudentsApp.Models.ClassDetail>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StrName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StrYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FkIdCurricularUnitsNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FkIdPersonNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StrName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StrYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FkIdCurricularUnitsNavigation.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FkIdPersonNavigation.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
