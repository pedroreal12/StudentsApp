@{
    ViewData["Title"] = "Students List";
}

<p>
    <a asp-action="Create" id="idCreate">Create New</a>
</p>

<table id="tabela">
    <thead>
        <tr>
            <td colspan="4">
                <input type="text" placeholder="Search by Name and Last Name" id="inpSearch">
                <button id="btnSearch" onclick="getSearch()">Search</button>
            </td>
        </tr>
        <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>BirthDate</th>
            <th>Role</th>
            <th>Options</th>
        </tr>
    </thead>

    <tbody id="body-table">
    </tbody>


    <tfoot id="foot-table">
    </tfoot>
</table>

@section Scripts {
     <script type="text/javascript" src="~/js/Students/index.js"></script>
}
