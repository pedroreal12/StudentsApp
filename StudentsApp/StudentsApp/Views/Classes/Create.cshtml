@model StudentsApp.Models.Class

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Class</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FkIdPerson" class="control-label">Students</label>
                <select id="selectStudents" name="FkIdPerson"></select>
            </div>
            <div class="form-group">
                <label asp-for="FkIdClassDetails" class="control-label">Class Details</label>
                <select id="selectClassDetails" name="FkIdClassDetails"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript" src="~/js/Classes/create.js"></script>
}
